 	drm_authenticate,
 	drm_create_buffer,
-        drm_create_planar_buffer,
-        drm_create_prime_buffer
+	drm_create_planar_buffer,
+	drm_create_prime_buffer,
+	drm_create_linear_prime_buffer
 };
 
 static void
