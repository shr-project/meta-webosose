@@ -164,6 +164,10 @@ std::string GetHumanReadableProcessName() {
   return SPrintF("%s[%d]", GetProcessTitle("Node.js"), uv_os_getpid());
 }
 
+std::string GetHumanReadableProcessNameWithoutPID() {
+  return SPrintF("%s", GetProcessTitle("Node.js"));
+}
