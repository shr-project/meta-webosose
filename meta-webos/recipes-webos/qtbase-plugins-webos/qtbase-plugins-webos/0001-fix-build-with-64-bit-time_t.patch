@@ -123,7 +123,10 @@ void QEmulatorKeyboardHandler::switchLed(int led, bool state)
     qWarning() << "switchLed" << led << state;
 
     struct ::input_event led_ie;
-    ::gettimeofday(&led_ie.time, 0);
+    struct ::timeval curtime;
+    ::gettimeofday(&curtime, 0);
